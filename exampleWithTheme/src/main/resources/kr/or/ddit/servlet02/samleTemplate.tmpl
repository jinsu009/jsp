<html>
<head>
<script type='text/javascript'>
	function changeHandler(){
		document.forms[0].submit();
	}
</script>
<style type='text/css'>
	h4{
		border : 1px solid black;
	}
</style>
</head>
<body>
<h4>current time(on server) : @now </h4>
<form action='fileStream.do'>
<select name='filename' onchange='changeHandler();'>
@data
</select>
<input type='submit' value='submit'/>
</form>
</body>
</html>